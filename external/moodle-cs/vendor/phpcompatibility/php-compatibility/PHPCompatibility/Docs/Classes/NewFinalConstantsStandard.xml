<?xml version="1.0"?>
<documentation xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="https://phpcsstandards.github.io/PHPCSDevTools/phpcsdocs.xsd"
    title="New Final Constants"
    >
    <standard>
    <![CDATA[
    OO constants can be declared as final since PHP 8.1.
    ]]>
    </standard>
    <code_comparison>
        <code title="Cross-version compatible: not using the final modifier.">
        <![CDATA[
class Foo {
    const BAR = 10;
}
        ]]>
        </code>
        <code title="PHP &gt;= 8.1: using the final modifier.">
        <![CDATA[
class Foo {
    <em>final</em> const BAR = 10;
}
        ]]>
        </code>
    </code_comparison>
</documentation>
